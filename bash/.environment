#!/usr/bin/env bash
#
# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

# PyENV
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# Java
export JAVA_HOME="$HOME/Libraries/jdk1.8.0_201"
export PATH="$JAVA_HOME/bin:$PATH"

# Jmeter
export JMETER_HOME="$HOME/Apps/apache-jmeter-4.0"

# Gradle
export GRADLE_HOME="$HOME/Apps/gradle-4.10.3"
export PATH="$GRADLE_HOME/bin:$PATH"

# Editor
export EDITOR=vim

# Customization
export POWERLINE_PROMPT="battery user_info scm python_venv ruby cwd"

# FASD
alias v='f -e vim' # quick opening files with vim
alias m='f -e mplayer' # quick opening files with mplayer
alias o='a -e xdg-open' # quick opening files with xdg-open

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Slack
alias dtam="slack-cli -d dta"
alias dtaf="slack-cli -d dta -f"
alias dtas="slack-cli -s dta"

# Hub
eval "$(hub alias -s bash)"

# Maven
export MAVEN_HOME="$HOME/Apps/apache-maven-3.6.0"
export PATH="$MAVEN_HOME/bin:$PATH"

# Spring Roo
export ROO_HOME="$HOME/Apps/spring-roo-2.0.0.RELEASE"
export PATH="$ROO_HOME/bin:$PATH"
alias roo=roo.sh

# Spring CLI
export SPRING_HOME="$HOME/Apps/spring-2.1.2.RELEASE"
export PATH="$SPRING_HOME/bin:$PATH"
source "$SPRING_HOME/shell-completion/bash/spring"

# NVIDIA CUDA
export CUDA_HOME="/usr/local/cuda"
export PATH="$CUDA_HOME/bin:$PATH"

export LD_LIBRARY_PATH="$CUDA_HOME/lib64:$LD_LIBRARY_PATH"
